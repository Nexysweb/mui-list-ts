{
  "compilerOptions": {
    "declaration": true,  
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "outDir": "dist/",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/lib/**/*"
  ]
}
